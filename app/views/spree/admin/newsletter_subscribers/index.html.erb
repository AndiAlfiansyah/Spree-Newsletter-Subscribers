<% content_for :page_title do %>
  <%= t(:newsletter_subscribers) %>
<% end %>

<div class="row">
  <%= form_for [:admin, Spree::NewsletterSubscriber.new] do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr data-hook="categories_header">
      <th><%= t(:email) %></th>
      <th><%= t(:confirmed) %></th>
      <th><%= t(:subscribed) %></th>
      <th><%= t(:action) %></th>
    </tr>
  </thead>
  <tbody>
    <% @newsletter_subscribers.each do |newsletter_subscriber|%>
    <tr id="<%= spree_dom_id newsletter_subscriber %>" data-hook="newsletter_subscriber_row">
      <td style="width:200px;"><%= newsletter_subscriber.email %></td>
      <td style="width:80px;"><%= newsletter_subscriber.confirmed %></td>
      <td style="width:80px;"><%= newsletter_subscriber.subscribed %></td>
      <td>
        <%= link_to_edit newsletter_subscriber, no_text: true %>
        <%= link_to_delete newsletter_subscriber, no_text: true %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
