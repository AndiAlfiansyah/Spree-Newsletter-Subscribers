<%= form_for [:admin, @newsletter_subscriber || Spree::NewsletterSubscriber.new] do |f| %>

  <div class="row">
    <div class="col-md-6">
      <%= f.label :email %><br />
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="col-md-6" data-hook="buttons">
      <br>
      <%= button 'Tambahkan Email', 'ok', 'submit', {class: 'btn-success'} %>
    </div>
  </div>
<% end %>
